<%@ page language="java" pageEncoding="UTF-8"%>
<%@taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<c:set var="ctx" value="${pageContext.request.contextPath}" />
<html>
<head>
	<title>登录</title>
	<script type="text/javascript">
		function reloadVerifyCode(){
			document.getElementById('verifyCodeImage').setAttribute('src', '${ctx}/getVerifyCodeImage');
		}
	</script>
</head>
<body>
<div style="color:red; font-size:22px;">${message_login}</div>

<form action="<%=request.getContextPath()%>/login" method="POST">
	姓名：<input type="text" name="username"/><br/>
	密码：<input type="text" name="password"/><br/>
	验证：<input type="text" name="verifyCode"/>
		 &nbsp;&nbsp;
		 <img id="verifyCodeImage" onclick="reloadVerifyCode()" src="${ctx}/getVerifyCodeImage"/><br/>
	<input type="submit" value="确认"/>
</form>
<a href="${ctx}/logout" target="_blank">Logout</a>  
</body>
</html>